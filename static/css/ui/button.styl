.btn
  background-color main-color
  color #fff
  cursor pointer
.btn-search
  border 0
  width 120px
  height 44px
  line-height 1
  font-size 18px
  font-family font
  text-shadow(0 0 2px #FFF)
  border-radius(0 3px 3px 0)
.btn-num
  width 30px
  height 30px
  border none
  background-color back-dcolor
  font-weight normal
  cursor pointer
.btn-add
  border none
  width 160px
  height 40px
  border-radius(5px)
  font-size 18px
  text-indent 25px
  text-shadow(0 0 1px #FFF)
  background url(/static/img/icon/cart-icon.png) 15px center no-repeat main-color
.btn-collect
  width 113px
  height 38px
  text-indent 15px
  border-radius(5px)
  color a-color
  cursor pointer
  border 1px solid border-color
  background url(/static/img/icon/collect-icon.png) 15px center no-repeat back-color