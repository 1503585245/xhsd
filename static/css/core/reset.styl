body,ol,ul,li,p,h1,h2,h3,h4,h5,h6,form,fieldset,table,td,img,div,dl,dt,dd,input
  margin 0
  padding 0
  border none
body
  font-size 12px
  font-family font
li
  list-style none
input,select,textarea
  outline 0
h1,h2,h3,h4,h5,h6
  font-size 12px
  font-weight normal
.clearfix
  zoom 1
  &:after
    content ""
    display block
    clear both
a
  text-decoration none
  color a-color
  &:hover
    text-decoration underline
    color main-color
    translate(all .5s)
