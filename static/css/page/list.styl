@require "../common.styl"
@require "./common/header.styl"

@require "./common/footer.styl"

.breadcrumb
  line-height 50px
  height 50px
  font-size 13px
  text-indent 5px
  width 100%
  float left
.new-rec
  width 210px
  border-top 4px solid main-color
  h3
    width 208px
    text-align center
    font-size 15px
    color a-color
    text-shadow(0 0 1px a-color)
    background-color back-color
    border 1px solid border-color
    border-top none
    border-bottom none
    height 38px
    line-height 38px
  ul
    width 208px
    padding-bottom 10px
    border 1px solid border-color
    border-top none
    li
      width 160px
      height auto
      padding 5px 24px
      border-top 1px dashed border-color
      .img-box
        padding 5px 0
        width 160px
        height 160px
        overflow hidden
        line-height 90px
        text-align center
        img
          *margin-top unquote('expression((160 - this.height)/2);')
          vertical-align middle
          max-width 160px
          max-height 160px
          *height unquote('expression(this.offsetHeight < "160" ? "auto" : "160px");')
      h4
        padding 0 20px
        width 120px
        height 40px
        line-height 20px
        overflow hidden
      p
        padding 0 20px
      strong
        font-size 13px
        font-weight 700
        color strong-color
      em
        float right
        color a-lcolor
        text-decoration line-through
        font-style normal

.right.main-right
  width 960px
  .control
    width 958px
    height 40px
    line-height 40px
    border 1px solid border-color
    border-bottom 3px solid main-color
    background-color back-color
    font-size 14px
    .left
      span
        padding 0 10px
        float left
      a
        margin 0
        float left
        color #000000
        padding 0 10px
        display inline-block
        height 40px
        border-left 1px solid border-color
        &.active
          color #ffffff
          background-color main-color
    .right
      padding-right 10px
      span
        padding 0 7px
        float right
      a
        float right
        margin-top 13px
        display inline-block
        width 13px
        height 13px
        border 1px solid border-color
  .control2
    padding 0 10px
    height 40px
    line-height 40px
    border 1px solid border-color
    font-size 14px
    .right
      a
        display inline-block
        width 50px
        height 25px
        border 1px solid border-color
        float right
        margin-top 6px
  .book-list
    li
      height 195px
      width 950px
      padding 30px 5px
      float left
      border-bottom 1px solid border-color
      font-size 14px
      .info-hide
        display none
      .img-box
        padding 0
        width 193px
        height 193px
        overflow hidden
        line-height 193px
        text-align center
        float left
        border 1px solid border-color
        img
          *margin-top unquote('expression((193 - this.height)/2);')
          vertical-align middle
          max-width 193px
          max-height 193px
          *height unquote('expression(this.offsetHeight < "193" ? "auto" : "193px");')
      .info
        margin-left 10px
        float left
        width 740px
        h3
          width 740px
          font-size 18px
          color main-color
          float left
          &.copy
            display none
        h4
          width 350px
          margin-right 20px
          float left
          font-size 14px
          line-height 30px
        p
          width 740px
          height 75px
          line-height 25px
          overflow hidden
          float left
        .buy-info
          margin-top 15px
          line-height 35px
          strong
            font-weight 700
            color strong-color
          em
            padding 0 5px
            font-size 12px
            text-decoration line-through
            color a-lcolor
          b
            font-weight 700
            color strong-color
            font-size 13px
    &.active
      li
        height 330px
        width 200px
        padding 15px 20px
        position relative
        z-index 5
        &.active
          .info-hide
            position absolute
            display block
            left 20px
            top 0
            padding-top 360px
            width 200px
            z-index 10
        .img-box
          width 200px
          height 200px
          line-height 200px
          border none
          img
            *margin-top unquote('expression((200 - this.height)/2);')
            max-width 200px
            max-height 200px
            *height unquote('expression(this.offsetHeight < "200" ? "auto" : "200px");')
        .info
          margin-left 0
          width 200px
          h3
            display none
            width 740px
            font-size 18px
            color main-color
            float left
            &.copy
              display block
              width 200px
          h4
            display none
            width 350px
            margin-right 20px
            float left
            font-size 14px
            line-height 30px
          p
            display none
            width 740px
            height 75px
            line-height 25px
            overflow hidden
            float left
          .buy-info
            margin-top 15px
            line-height 35px
            .left
              width 200px
            .right
              float left
              width 200px
            strong
              font-weight 700
              color strong-color
            em
              padding 0 5px
              font-size 12px
              text-decoration line-through
              color a-lcolor
            b
              font-weight 700
              color strong-color
              font-size 13px