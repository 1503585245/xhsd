nav-height = 40px
#nav
  width 100%
  height nav-height
  background-color main-color
  .main-list
    width 208px
    height nav-height
    border-left 1px solid main-color
    border-right 1px solid main-color
    background-color sub-color
    position relative
    h3
      line-height nav-height
      text-align center
      color #fff
      font-size 15px
    .list
      position absolute
      left 0
      top nav-height
      border 1px solid main-color
      border-top none
      dl
        width 186px
        padding 0 10px
        border-top 1px dashed main-color
        &.first-item
          border-top none
      dt
        a
          color main-color
          &:hover
            text-decoration none
        font-size 14px
        line-height 25px
        font-weight bold

      dd
        font-size 12px
        line-height 25px
        padding-bottom 5px
  .main-nav
    margin-left 10px
    line-height nav-height
    li
      float left
    a
      height nav-height
      display inline-block
      padding 0 30px
      color #FFF
      font-size 14px
      &:hover
        background-color #e54e12
        color #FFF
        text-decoration none
        zoom 1
        translate(all .5s)
