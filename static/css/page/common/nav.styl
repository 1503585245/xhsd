nav-height = 40px
#nav
  width 100%
  height nav-height
  background-color main-color
  .main-list
    width 208px
    height nav-height
    border-left 1px solid main-color
    border-right 1px solid main-color
    background-color sub-color
    position relative
    z-index 9999
    h3
      line-height nav-height
      text-align center
      color #fff
      font-size 15px
      cursor pointer
      text-shadow(0 0 1px #FFF)
    &.active
      .list
        display block
    .list
      display none
      position absolute
      left 0
      z-index 9999
      top nav-height
      border 2px solid main-color
      border-top none
      width auto
      height auto
      background-color #FFF
      dl.item
        position relative
        z-index 9999
        width 184px
        padding 0 10px
        border-top 1px dashed main-color
        &.first-item
          border-top none
          .sub-item
            border-top none
            top 0
        &:hover
          background-color main-color
          margin-bottom -1px
          margin-top -1px
          text-shadow(0 0 1px #FFF)
          a
            color #FFF
          dt
            background unquote('url(/static/img/icon/'+season+'-icon-right.png)') right center no-repeat
            a
              color #FFF
              font-weight 700
          .sub-item
            display block
        .sub-item
          width 520px
          height auto
          display none
          padding 30px
          border 2px solid main-color
          position absolute
          top -1px
          left 204px
          z-index 9999
          background-color #FFF
          a
            display inline-block
            padding 0 12px
            color a-color
            line-height 25px
            &:hover
              color main-color
        dt
          background url(/static/img/icon/icon-right.png) right center no-repeat
          a
            color main-color
            &:hover
              text-decoration none
          font-size 15px
          line-height 27px
          text-shadow(0 0 1px main-color)
          &.on
            padding 8px 0
            a
              display block
        dd
          padding-left 5px
          font-size 13px
          line-height 25px
          padding-bottom 5px
          a
            padding-right 5px
            display inline-block
  .main-nav
    margin-left 10px
    line-height nav-height
    li
      float left
    a
      height nav-height
      display inline-block
      padding 0 30px
      color #FFF
      font-size 14px
      text-shadow(0 0 1px #FFF)
      &:hover
        background-color #e54e12
        color #FFF
        text-decoration none
        zoom 1
        translate(all .5s)
