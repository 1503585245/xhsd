@require "../common.styl"
@require "./common/header.styl"
@require "../widget/slider.styl"
@require "./common/footer.styl"


/* book-list */
.book-list
  li
    /* 设置li的padding */
    float left
    height 250px
    width img-width
    .img-box
      padding 15px 0 5px 0
      width img-width
      height img-width
      text-align center
      overflow hidden
      vertical-align middle
      img
        max-width img-width
        max-height img-width
    h4
      padding 0 20px
      width 120px
      height 40px
      line-height 20px
      overflow hidden
    p
      padding 0 20px
    strong
      color #c40000
    em
      float right
      color border-color
      text-decoration line-through
      font-style normal

/* list-warp */
.list-warp
  width 967px
  height 550px
  h3
    margin-bottom 3px
    width 100%
    height 45px
    border-bottom 2px solid main-color
    font-size 18px
    line-height 45px
    text-indent 5px
    color sub-color
    &:first-letter
      font-size 28px
      color main-color
  ul
    margin-left 1px
    height 500px
    overflow hidden
    li
      padding 0 17px 0 16px


/* tab-sidebar */
.tab-sidebar
  width 224px
  height 550px
  h3
    height 40px
    line-height 40px
    color main-color
    font-size 18px
    text-indent 10px
  .tab-sidebar-box
    width 222px
    height 508px
    border 1px solid border-color

/* tab-sidebar-box */
.tab-sidebar-box
  overflow hidden
  .book-list
    width 200px
    padding 0 11px
    li
      position relative
      height 45px
      width 100%
      border-bottom 1px dashed border-color
      div,p
        display none
      h4
        height 45px
        line-height 45px
        padding-left 45px
      &.active
        div,p
          display block
          translate(all 1s)
        h4
          width 120px
          height 20px
          line-height 20px
          padding 0 20px
          overflow hidden
        height 230px
        padding 0 0 0 40px
        width auto
  h5
    margin 20px 15px 0
    text-align right
    a
      color main-color


  .author-top
    .left
      width 80px
      height 170px
      margin 15px 5px
      padding-top 10px
      img
        display block
        width 80px
        height 80px
        border-radius(40px)
      h4
        text-align center
        color main-color
        font-size 16px
        width 80px
        line-height 40px
        margin-top 20px

    .right
      b
        padding 0 5px
        background-color main-color
        color #FFF
      line-height 20px
      width 120px
      height 180px
      margin 15px 5px 15px 0
      overflow hidden


  .author-mid
    margin 0 5px
    padding 5px 0
    height 90px
    background-color #f7f7f7
    line-height 30px
    li
      padding-left 30px
      font-size 14px
  .author-bottom
    margin 30px 20px
    li
      padding 0
      height 28px
      float left
      width 85px
      margin-right 5px
      overflow hidden

/* common padding-top */
.second-screen,.third-screen,.forth-screen,.fifth-screen
  padding-top 10px
.ad
  padding-top 20px
  span
    display inline-block
    width 15px
/* first-screen */
.first-screen
  padding 10px 0 0 218px
  .banner-box
    width 750px
    height 340px
    .slider-btn-box
      width 100%
      text-align center
      bottom 20px
      right 30px
      .slider-btn
        width 20px
        height 20px
        display inline-block
        *display inline
        zoom 1
        margin 0 10px
        background-color #FFF
        border-radius(10px)
        &.active
          background-color main-color
    .slider-prev,.slider-next
      width 50px
      height 100px
      background-color #000
      opacity(0.3);
      top 50%
      margin-top -50px
      &:hover
        opacity(0.5);
  .notice
    width 224px
    height 340px
    h3
      font-size 120%
      font-weight 700
      color main-color
      line-height 25px
      text-indent 5px
    .notice-list
      border 1px solid border-color
      height 200px
      width 222px
      margin-bottom 10px
      ul
        padding 0 15px
        width 192px
        li
          padding-left 15px
          height 25px
          line-height 25px
          overflow hidden
    .wx
      border 1px solid border-color
      height 127px
      width 222px
      img
        margin 5px 10px
        width 90px
        height 90px
      p
        width 90px
        height 88px
        margin 6px
        word-spacing 1px
        line-height 22px
        overflow hidden
  .main-tab-view
    width 750px
    height 550px
    margin-top 10px
    position relative
    h3
      width 750px
      width 100%
      height 45px
      border-bottom 2px solid main-color
      font-size 18px
      line-height 45px
      text-indent 5px
      color sub-color
      position absolute
      left 0
      top 0
      z-index -1
      &:first-letter
        font-size 28px
        color main-color
    .tab-control
      margin-left img-width
      width 590px
      font-size 18px
      z-index 10
      position relative
      padding-top 5px
      li
        cursor pointer
        float left
        padding 0 20px
        margin 0 20px
        height 38px
        line-height 40px
        *line-height 38px
        color main-color
        border-radius(5px 5px 0 0)
        &.active
          border 2px solid main-color
          border-bottom 2px solid #FFF
          background-color #FFF
    .tab-item
      display none
      li
        padding 0 13px
      &.active
        display block
  .tab-sidebar
    margin-top 10px

  .tab-sidebar-box
    overflow hidden;
    .tab-control
      width 222px
      height 35px
      li
        margin-top 10px
        float left
        width 73px
        border-left 1px solid a-color
        text-align center
        cursor pointer
        &.active
          color main-color
        &.first-item
          border-left none
    .tab-item
      display none
      &.active
        display block
      .book-list
        width 200px
        padding 0 11px
        li
          &.active
            p
              translate(all 1s)
              width 120px
              height 20px
              position static
              float none
              padding 0 20px
          span
            display block
            position absolute
            top 8px
            left 10px
            font-size 24px
            color #c40000

/* second-screen */
.second-screen
  .tab-sidebar-box
    .book-list
      width 200px
      padding 0 11px
      li
        width 200px
        position relative
        height 45px
        width 100%
        border-bottom 1px dashed border-color
        div
          display none
        p
          padding 0
          right 5px
          top 12px
          position absolute
          display block

          em
            display none
        h4
          position absolute
          left 0
          top 0
          padding-left 0
          overflow hidden
          width 140px
          height 30px

        &.active

          width img-width
          height 230px
          padding 0 0 0 40px
          width auto
          div,p
            display block
          p
            translate(all 1s)
            width 120px
            height 20px
            position static
            float none
            padding 0 20px
            em
              float right
              display inline
            strong
              float left
          h4
            padding 0 20px
            position static
            width 120px
            height 20px
            line-height 20px

            overflow hidden
          span
            top 10px
            width 38px
            height 38px
            left 0
            position absolute
            background-color red

    h5
      margin 20px 15px 0
      text-align right
      a
        color main-color
/* forth-screen */
.forth-screen
  .tab-sidebar-box
    .book-list
      width 200px
      padding 0 11px
      li
        &.active
          p
            translate(all 1s)
            width 120px
            height 20px
            position static
            float none
            padding 0 20px


.fifth-screen
  .tab-view
    width 1198px
    margin-top -2px
    border 1px solid border-color
    border-top none
    overflow hidden
    .tab-control
      margin-right -2px
      li
        float left
        height 149px
        width 149px
        border-left 1px solid border-color
        border-bottom 1px solid border-color
        background-color #f7f7f7
        cursor pointer
        &.first-item
          border-left none
        &.active
          border-bottom 1px solid #FFF
          background-color #FFF
    .tab-item
      display none
      width 1200px
      height 500px
      overflow hidden
      margin-right -2px
      &.active
        display block
  h3
    margin-bottom 3px
    width 100%
    height 45px
    border-bottom 2px solid main-color
    font-size 18px
    line-height 45px
    text-indent 5px
    color sub-color
    &:first-letter
      font-size 28px
      color main-color
  ul
    height 500px
    overflow hidden
    li
      padding 0 40px
  .book-list
    li
      padding 0 20px
