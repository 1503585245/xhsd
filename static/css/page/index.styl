@require "../common.styl"
@require "./common/header.styl"
@require "../widget/slider.styl"
@require "./common/footer.styl"

.container.main
  background-color #FFF
/* header nav */
#nav
  .main-list
    .list
      display block
/* book-list */
.book-list
  li
    /* 设置li的padding */
    float left
    height 240px
    width img-width
    margin-top 10px
    a
      color book-color
      &:hover
        color main-color
    .img-box
      padding 5px 0
      width img-width
      height img-width
      overflow hidden
      line-height img-width
      text-align center
      img
        *margin-top unquote('expression((160 - this.height)/2);')
        vertical-align middle
        max-width img-width
        max-height img-width
        //_width unquote('expression(this.offsetWidth < "160" ? "auto" : "160px");')
        _height unquote('expression(this.offsetHeight < "160" ? "auto" : "160px");')
        //_width auto
    h4
      padding 0 20px
      width 120px
      height 40px
      line-height 20px
      overflow hidden
    p
      padding 0 20px
    strong
      font-size 13px
      font-weight 700
      color strong-color
    em
      float right
      color a-lcolor
      text-decoration line-through
      font-style normal

/* list-warp */
.list-warp
  width 967px
  height 550px
  h3
    margin-bottom 3px
    width 100%
    height 45px
    border-bottom 3px solid main-color
    font-size 16px
    letter-spacing 1px
    line-height 45px
    text-indent 5px
    color sub-color
    text-shadow(0 0 1px sub-color)
    b
      _font-size 28px
      _color main-color
    &:first-letter
      font-size 28px
      color main-color
      text-shadow(0 0 1px main-color)
  ul
    margin-left 1px
    height 500px
    overflow hidden
    li
      padding 0 17px 0 16px


/* tab-sidebar */
.tab-sidebar
  width 224px
  height 550px
  h3
    height 40px
    line-height 40px
    color main-color
    font-size 16px
    text-shadow(0 0 1px main-color)
    text-indent 10px
  .tab-sidebar-box
    box-shadow(0 0 2px border-color)
    width 222px
    height 508px
    border 1px solid border-color

/* tab-sidebar-box */
.tab-sidebar-box
  overflow hidden
  .book-list
    width 200px
    padding 0 11px
    li
      margin 0;
      position relative
      height 45px
      width 100%
      border-bottom 1px dashed border-color
      div,p
        display none
      h4
        height 45px
        line-height 45px
        padding-left 45px
      &.active
        div,p
          display block
          translate(all 1s)
        h4
          width 120px
          height 20px
          line-height 20px
          padding 0 20px
          overflow hidden
        height 230px
        padding 0 0 0 40px
        width auto
  h5
    margin 20px 15px 0
    text-align right
    a
      color main-color


  .author-top
    .left
      width 80px
      height 170px
      margin 15px 5px
      padding-top 10px
      img
        display block
        width 80px
        height 80px
        border-radius(40px)
      h4
        text-align center
        color main-color
        font-size 16px
        width 80px
        line-height 40px
        margin-top 20px

    .right
      b
        padding 0 5px
        background-color main-color
        color #FFF
      line-height 20px
      width 120px
      height 180px
      margin 15px 5px 15px 0
      overflow hidden


  .author-mid
    margin 0 5px
    padding 5px 0
    height 90px
    background-color back-color
    line-height 30px
    li
      background url(/static/img/icon/pointer.png) 10px center no-repeat
      padding-left 30px
      font-size 14px
  .author-bottom
    margin 30px 20px
    li

      padding 0
      height 28px
      float left
      width 85px
      margin-right 5px
      overflow hidden

/* common padding-top */
.second-screen,.third-screen,.forth-screen,.fifth-screen
  padding-top 10px
.ad
  padding-top 20px
  span
    display inline-block
    width 15px
/* first-screen */
.first-screen
  padding 10px 0 0 218px
  .banner-box
    width 750px
    height 340px
    box-shadow(0 0 2px border-color)
    .slider-btn-box
      width 100%
      text-align center
      bottom 10px
      .slider-btn
        width 8px
        height 8px
        display inline-block
        *display inline
        zoom 1
        margin 0 4px
        background url(/static/img/icon/slider-btn.png) -1px -1px no-repeat
        border-radius(4px)
        &.active
          background url(/static/img/icon/slider-btn.png) -11px -1px no-repeat
    .slider-prev,.slider-next
      display none
      cursor pointer
      width 45px
      height 110px
      top 50%
      margin-top -55px
      background url(/static/img/icon/prev-next.png) no-repeat
    .slider-prev
      background-position -3px -3px
      &:hover
        background-position -3px -119px
    .slider-next
      background-position -54px -3px
      &:hover
        background-position -54px -119px
  .notice
    width 224px
    height 340px
    h3
      font-size 14px
      color main-color
      line-height 25px
      text-indent 5px
      text-shadow(0 0 1px main-color)
    .notice-list
      box-shadow(0 0 2px border-color)
      border 1px solid border-color
      height 200px
      width 222px
      margin-bottom 10px
      ul
        padding 0 10px
        width 202px
        li
          background url(/static/img/icon/pointer.png) 0 8px no-repeat
          padding-left 15px
          height 25px
          line-height 25px
          text-overflow ellipsis
          white-space nowrap
          *white-space normal
          overflow hidden
    .wx
      border 1px solid border-color
      height 127px
      width 222px
      box-shadow(0 0 2px border-color)
      img
        margin 5px 10px
        width 90px
        height 90px
      p
        width 90px
        height 88px
        margin 6px
        word-spacing 1px
        line-height 22px
        overflow hidden
  .main-tab-view
    width 750px
    height 550px
    margin-top 10px
    position relative
    h3
      width 750px
      width 100%
      height 45px
      border-bottom 3px solid main-color
      font-size 16px
      letter-spacing 1px
      line-height 45px
      text-indent 5px
      color sub-color
      position absolute
      left 0
      top 0
      z-index 1
      text-shadow(0 0 1px sub-color)
      b
        _font-size 28px
        _color main-color
      &:first-letter
        text-shadow(0 0 1px main-color)
        font-size 28px
        color main-color
    .tab-control
      margin-left img-width
      width 590px
      font-size 16px
      z-index 10
      position relative
      padding-top 5px
      li
        cursor pointer
        float left
        padding 0 20px
        margin 0 20px
        height 35px
        line-height 38px
        *line-height 35px
        color a-color
        border-radius(5px 5px 0 0)

        &.active
          color main-color
          border 3px solid main-color
          border-bottom 5px solid #FFF
          background-color #FFF
    .tab-item
      display none
      li
        padding 0 13px
      &.active
        display block
  .tab-sidebar
    margin-top 10px

  .tab-sidebar-box
    overflow hidden;
    .tab-control
      width 222px
      height 35px
      li
        margin-top 10px
        float left
        width 73px
        border-left 1px solid a-color
        text-align center
        cursor pointer
        &.active
          color main-color
        &.first-item
          border-left none
    .tab-item
      display none
      &.active
        display block
      .book-list
        width 200px
        padding 0 11px
        li
          margin 0;
          &.active
            padding-top 10px
            padding-bottom 10px
            height 210px
            p
              translate(all 1s)
              width 120px
              height 20px
              position static
              float none
              padding 0 20px
          span
            display block
            position absolute
            top 8px
            left 10px
            font-size 24px
            color strong-color

/* second-screen */
.second-screen
  .tab-sidebar-box
    .book-list
      width 200px
      padding 0 11px
      li
        margin 0;
        position relative
        height 45px
        width 100%
        border-bottom 1px dashed border-color
        div
          display none
        p
          padding 0
          right 5px
          top 12px
          position absolute
          display block

          em
            display none
        h4
          position absolute
          left 0
          top 0
          padding-left 0
          overflow hidden
          width 140px
          height 30px

        &.active
          height 210px
          padding 10px 0 10px 40px
          width auto
          div,p
            display block
          p
            translate(all 1s)
            width 120px
            height 20px
            position static
            float none
            padding 0 20px
            em
              float right
              display inline
            strong
              float left
          h4
            padding 0 20px
            position static
            width 120px
            height 20px
            line-height 20px

            overflow hidden
          span
            top 10px
            width 38px
            height 38px
            left 0
            position absolute
            background unquote('url(/static/img/icon/'+season+'-count-icon.png)') 4px 4px no-repeat

    h5
      margin 20px 15px 0
      text-align right
      a
        color main-color
/* forth-screen */
.forth-screen
  .tab-sidebar-box
    .book-list
      width 200px
      padding 0 11px
      li
        background url(/static/img/icon/pointer.png) 8px center no-repeat
        margin 0;
        &.active
          height 210px
          padding 10px 0 10px 40px
          background none
          p
            translate(all 1s)
            width 120px
            height 20px
            position static
            float none
            padding 0 20px


.fifth-screen
  .tab-view
    width 1198px
    margin-top -2px
    border 1px solid border-color
    border-top none
    overflow hidden
    .tab-control
      margin-right -2px
      a
        text-decoration none
      li
        position relative
        float left
        height 149px
        width 149px
        border-left 1px solid border-color
        border-bottom 1px solid border-color
        background-color back-color
        cursor pointer
        &.first-item
          i
            background-position -3px -3px
        &.second-item
          i
            background-position -63px -3px
        &.third-item
          i
            background-position -123px -3px
        &.forth-item
          i
            background-position -183px -3px
        &.fifth-item
          border-left none
          i
            background-position -243px -3px
        &.sixth-item
          i
            background-position -303px -3px
        &.seventh-item
          i
            background-position -363px -3px
        &.eighth-item
          i
            background-position -423px -3px
        &.active
          border-bottom 1px solid #FFF
          background-color #FFF
        i
          position absolute
          width 54px
          height 54px
          display block
          top 20px
          left 47px
          background url(/static/img/cbs-list.png) no-repeat
        h3
          padding-top 75px
          height 30px
          line-height 30px
          text-align center
          font-size 12px
          letter-spacing auto
          color #000
          text-indent 0
          border none
          text-shadow(none)
          font-weight normal
          &:first-letter
            font-size 12px
            color #000
            text-shadow(none)
            font-weight normal
    .tab-item
      display none
      width 1200px
      height 500px
      overflow hidden
      margin-right -2px
      &.active
        display block
  h3
    margin-bottom 3px
    width 100%
    height 45px
    border-bottom 3px solid main-color
    font-size 16px
    letter-spacing 1px
    line-height 45px
    text-indent 5px
    color sub-color
    text-shadow(0 0 1px sub-color)
    b
      _font-size 28px
      _color main-color
    &:first-letter
      font-size 28px
      color main-color
      text-shadow(0 0 1px main-color)
  ul
    height 500px
    overflow hidden
    li
      padding 0 40px
  .book-list
    li
      padding 0 20px
